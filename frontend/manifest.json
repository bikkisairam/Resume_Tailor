{
  "manifest_version": 3,
  "name": "Resume Tailor",
  "version": "1.0",
  "description": "Tailor your resume to job descriptions.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.dice.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
